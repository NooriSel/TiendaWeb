@model IEnumerable<TiendaWeb.Models.Cerveza>
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
       
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Imagenes/slider/cervezas.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/Imagenes/slider/descarga.jpg" class="d-block w-100" alt="...">
        </div>
       
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container"> 
    <div class="row">
        <div class="col-12 ">
            <h1 style="font-size: 4rem; color: red; font-weight: bold; text-align: center;
           text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                Últimas Cervezas
            </h1>


        </div>
    </div>
    <div class="row">
        @if(Model.Count()>0)
        {
			@foreach(var cerveza in Model.OrderBy(o=>o.id))
            {
                <div class="col-sm-12 col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img src="@cerveza.UrlImagen" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@cerveza.nombre</h5>

                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@Html.DisplayNameFor(modelItem => cerveza.idEstilo): @cerveza.Estilo.nombre</li>
                            <li class="list-group-item">@Html.DisplayNameFor(modelItem => cerveza.alcohol): @cerveza.alcohol</li>
                            <li class="list-group-item">@Html.DisplayNameFor(modelItem => cerveza.precio): @cerveza.precio</li>
                        </ul>
                        <div class="card-body">
                            <a asp-controller="Home" asp-action="Detalles" asp-route-id="@cerveza.id" class="card-link"> Detalles</a>
                            
                        </div>
                    </div>
                </div>
            }
            
        }

    </div>
    
</div>
